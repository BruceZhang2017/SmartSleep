<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <ScrollView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tv_simulation_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模拟数据"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="37dp"
                android:drawableLeft="@mipmap/report_icon_date"
                android:drawablePadding="9dp"/>

            <ImageButton
                android:id="@+id/ib_left_pre"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_simulation_data"
                app:layout_constraintBottom_toBottomOf="@id/tv_simulation_data"
                android:layout_marginStart="50dp"
                android:src="@mipmap/report_icon_back"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/ib_right_next"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_simulation_data"
                app:layout_constraintBottom_toBottomOf="@id/tv_simulation_data"
                android:layout_marginEnd="50dp"
                android:src="@mipmap/report_icon_next"
                android:background="@null"/>

            <TextView
                android:id="@+id/tv_sleep_week_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_not_good"
                android:textColor="#F3D032"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ib_left_pre"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="28dp"/>

            <TextView
                android:id="@+id/tv_sleep_week_value_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_average_score"
                android:textColor="#4176E3"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_week_value"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_sleep_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100分"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/ib_right_next"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="18dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_value"
                android:layout_marginTop="10dp"
                android:paddingBottom="0dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_sleep_week_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_average_deep_sleep"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_8"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/tv_sleep_average_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17小时50分"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toTopOf="@id/tv_sleep_week_average"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep_week_average"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_average_time"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart2"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_sleep_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_sleep_data"
                android:textColor="#E9F0FF"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cl_2"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_data"
                android:layout_marginTop="20dp"
                android:background="@drawable/block_bordor">

                <TextView
                    android:id="@+id/tv_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23时30分"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/iv_time_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_time_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="7dp"
                    android:src="@mipmap/report_icon_go_to_bed"/>

                <TextView
                    android:id="@+id/tv_sleep_time_1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/common_bed_time"
                    android:textColor="#555A63"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_time_1"
                    app:layout_constraintTop_toTopOf="@id/iv_time_1"
                    app:layout_constraintBottom_toBottomOf="@id/iv_time_1"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_sleep_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_health"
                    android:textColor="#4BBE20"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_sleep_time_1"
                    app:layout_constraintTop_toTopOf="@id/tv_sleep_time_1"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="invisible"
                    android:background="@drawable/textview_bordor"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cl_1"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_data"
                android:layout_marginTop="20dp"
                android:background="@drawable/block_bordor">

                <TextView
                    android:id="@+id/tv_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23时30分"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/iv_time_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_time_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/report_icon_fall_asleep"/>

                <TextView
                    android:id="@+id/tv_sleep_time_2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/middle_sleep_duration"
                    android:textColor="#555A63"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_time_2"
                    app:layout_constraintTop_toTopOf="@id/iv_time_2"
                    app:layout_constraintBottom_toBottomOf="@id/iv_time_2"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_sleep_tag_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_health"
                    android:textColor="#CAAD2A"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_sleep_time_2"
                    app:layout_constraintTop_toTopOf="@id/tv_sleep_time_2"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="invisible"
                    android:background="@drawable/textview_bordor"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cl_6"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/cl_4"
                android:layout_marginTop="24dp"
                android:background="@drawable/block_bordor">

                <TextView
                    android:id="@+id/tv_time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23时30分"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/iv_time_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_time_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/report_icon_sober"/>

                <TextView
                    android:id="@+id/tv_sleep_time_3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/report_awake_duration"
                    android:textColor="#555A63"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_time_3"
                    app:layout_constraintTop_toTopOf="@id/iv_time_3"
                    app:layout_constraintBottom_toBottomOf="@id/iv_time_3"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_sleep_tag_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_health"
                    android:textColor="#4BBE20"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_sleep_time_3"
                    app:layout_constraintTop_toTopOf="@id/tv_sleep_time_3"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="invisible"
                    android:background="@drawable/textview_bordor"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/cl_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_1"
                android:layout_marginTop="24dp"
                android:background="@drawable/block_bordor">

                <TextView
                    android:id="@+id/tv_time_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23时30分"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/iv_time_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_time_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/report_icon_heart_rate"/>

                <TextView
                    android:id="@+id/tv_sleep_time_4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/report_heart_rate"
                    android:textColor="#555A63"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_time_4"
                    app:layout_constraintTop_toTopOf="@id/iv_time_4"
                    app:layout_constraintBottom_toBottomOf="@id/iv_time_4"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_sleep_tag_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_health"
                    android:textColor="#CAAD2A"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_sleep_time_4"
                    app:layout_constraintTop_toTopOf="@id/tv_sleep_time_4"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_4"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="invisible"
                    android:background="@drawable/textview_bordor"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/cl_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/cl_2"
                android:layout_marginTop="24dp"
                android:background="@drawable/block_bordor">

                <TextView
                    android:id="@+id/tv_time_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23时30分"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/iv_time_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_time_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/report_icon_respiratory_rate"/>

                <TextView
                    android:id="@+id/tv_sleep_time_5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/report_respiratory_rate_aver"
                    android:textColor="#555A63"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_time_5"
                    app:layout_constraintTop_toTopOf="@id/iv_time_5"
                    app:layout_constraintBottom_toBottomOf="@id/iv_time_5"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_sleep_tag_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_health"
                    android:textColor="#4BBE20"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_sleep_time_5"
                    app:layout_constraintTop_toTopOf="@id/tv_sleep_time_5"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_5"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="invisible"
                    android:background="@drawable/textview_bordor"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cl_3"
                app:layout_constraintTop_toBottomOf="@id/cl_4"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/block_bordor">

                <TextView
                    android:id="@+id/tv_time_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23时30分"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/iv_time_6"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_time_6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/report_icon_clear"/>

                <TextView
                    android:id="@+id/tv_sleep_time_6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/report_wake_up_times"
                    android:textColor="#555A63"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_time_6"
                    app:layout_constraintTop_toTopOf="@id/iv_time_6"
                    app:layout_constraintBottom_toBottomOf="@id/iv_time_6"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_sleep_tag_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_health"
                    android:textColor="#CAAD2A"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_sleep_time_6"
                    app:layout_constraintTop_toTopOf="@id/tv_sleep_time_6"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_6"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="invisible"
                    android:background="@drawable/textview_bordor"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>