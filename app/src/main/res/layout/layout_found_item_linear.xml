<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/str_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/str_image_holder"
        android:layout_width="match_parent"
        app:riv_corner_radius="5dp"
        android:layout_height="125dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:scaleType="center"
        android:background="@drawable/home_head_view_pager_image_view_bg"
        android:src="@mipmap/icon_placeholder"/>

    <TextView
        android:id="@+id/str_textview_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:text="@string/found_cpap"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/str_image_holder"/>

    <TextView
        android:id="@+id/str_textview_feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/btn_look"
        android:text="@string/found_sleep_button"
        android:textSize="14sp"
        android:textColor="#B2C1E0"
        android:singleLine="true"
        android:ellipsize = "end"
        android:layout_below="@id/str_textview_holder"/>

    <com.deadline.statebutton.StateButton
        android:id="@+id/btn_look"
        android:layout_width="66dp"
        android:layout_height="29dp"
        android:layout_below="@id/str_textview_holder"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="20dp"
        android:text="@string/index_enter"
        android:textSize="12sp"
        android:background="@null"
        app:radius="5dp"
        app:animationDuration="200"
        app:normalStrokeWidth="1dp"
        app:normalBackgroundColor="@color/colorBG"
        app:normalTextColor="#4CC4C3"
        app:pressedTextColor="#4176E3"
        app:normalStrokeColor="#4CC4C3"
        app:pressedBackgroundColor="#4176E3"/>


</RelativeLayout>