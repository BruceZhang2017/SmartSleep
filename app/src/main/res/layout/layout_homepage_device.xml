<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <ImageView
        android:id="@+id/iv_card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/home_card_bg"
        app:layout_constraintDimensionRatio="h,681:960"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_vertical_flag"
        android:layout_width="2dp"
        android:layout_height="11dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_card_bg"
        app:layout_constraintTop_toTopOf="@id/iv_card_bg"
        android:background="#76D5DD"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_vertical_flag"
        app:layout_constraintTop_toTopOf="@id/iv_vertical_flag"
        app:layout_constraintBottom_toBottomOf="@id/iv_vertical_flag"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:text="@string/report_yamy_sleep_belt" />

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/iv_bluetooth"
        app:layout_constraintTop_toTopOf="@id/iv_bluetooth"
        app:layout_constraintBottom_toBottomOf="@id/iv_bluetooth"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:text="0%" />

    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_battery"
        app:layout_constraintBottom_toBottomOf="@id/tv_battery"
        app:layout_constraintRight_toLeftOf="@id/tv_battery"
        android:layout_marginRight="3dp"
        android:src="@mipmap/icon_battery_default"/>

    <ImageView
        android:id="@+id/iv_battery_value"
        android:layout_width="11dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_battery"
        app:layout_constraintLeft_toLeftOf="@id/iv_battery"
        app:layout_constraintRight_toRightOf="@id/iv_battery"
        android:layout_marginBottom="4dp"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/iv_bluetooth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/bluetooth1"
        app:layout_constraintRight_toRightOf="@id/iv_card_bg"
        app:layout_constraintTop_toTopOf="@id/tv_device_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_device_name"
        android:layout_marginRight="15dp"/>

    <io.feeeei.circleseekbar.CircleSeekBar
        android:id="@+id/circle_percent_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_card_bg"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"
        android:layout_marginTop="15dp"
        app:wheel_max_process="100"
        app:wheel_cur_process="0"
        app:wheel_reached_width="10dp"
        app:wheel_unreached_width="10dp"
        app:wheel_pointer_radius="7dp"
        android:padding="4dp"
        app:wheel_can_touch="false"
        app:wheel_unreached_color="#29FFFFFF"
        app:wheel_reached_color="#5DF2FF"/>

    <TextView
        android:id="@+id/tv_sleep_review_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0分"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/circle_percent_progress"
        app:layout_constraintTop_toTopOf="@id/circle_percent_progress"
        app:layout_constraintBottom_toBottomOf="@id/circle_percent_progress"
        app:layout_constraintRight_toRightOf="@id/circle_percent_progress" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/circle_percent_progress"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_card_bg"
        app:layout_constraintRight_toRightOf="@id/iv_card_bg"
        android:layout_marginTop="16dp">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_homepage"
            android:layout_width="wrap_content"
            android:layout_height="511dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dot_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/iv_dot_first"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#090E17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_dot_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/iv_dot_first"
                app:layout_constraintTop_toTopOf="@id/iv_dot_first"
                app:layout_constraintBottom_toBottomOf="@id/iv_dot_first"
                android:layout_marginLeft="5dp"
                android:text="@string/middle_fall_asleep"
                android:textColor="#888D96"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_sleep_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_dot_first"
                app:layout_constraintTop_toBottomOf="@id/tv_dot_first"
                android:layout_marginTop="4dp"
                android:text="00时00分"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dot_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guideline_homepage"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/iv_dot_second"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#090E17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_dot_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/iv_dot_second"
                app:layout_constraintTop_toTopOf="@id/iv_dot_second"
                app:layout_constraintBottom_toBottomOf="@id/iv_dot_second"
                android:layout_marginLeft="5dp"
                android:text="@string/report_sleep_hour"
                android:textColor="#888D96"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_sleep_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_dot_second"
                app:layout_constraintTop_toBottomOf="@id/tv_dot_second"
                android:layout_marginTop="4dp"
                android:text="00小时00分钟"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dot_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_dot_first"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/iv_dot_three"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#090E17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_dot_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/iv_dot_three"
                app:layout_constraintTop_toTopOf="@id/iv_dot_three"
                app:layout_constraintBottom_toBottomOf="@id/iv_dot_three"
                android:layout_marginLeft="5dp"
                android:text="@string/common_body_moves"
                android:textColor="#888D96"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_body_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_dot_three"
                app:layout_constraintTop_toBottomOf="@id/tv_dot_three"
                android:layout_marginTop="4dp"
                android:text="较少"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dot_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_dot_second"
            app:layout_constraintLeft_toRightOf="@id/guideline_homepage"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/iv_dot_four"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#090E17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_dot_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/iv_dot_four"
                app:layout_constraintTop_toTopOf="@id/iv_dot_four"
                app:layout_constraintBottom_toBottomOf="@id/iv_dot_four"
                android:layout_marginLeft="5dp"
                android:text="@string/common_snoring_times"
                android:textColor="#888D96"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_dot_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_dot_four"
                app:layout_constraintTop_toBottomOf="@id/tv_dot_four"
                android:layout_marginTop="4dp"
                android:text="0次"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_card_bg"
        app:layout_constraintTop_toBottomOf="@id/circle_percent_progress"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="#FFFFFF"
        android:text="@string/report_daily_words"
        android:textSize="10sp"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@drawable/textview_background_corner"/>

    <TextView
        android:id="@+id/tv_tip_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_tip"
        app:layout_constraintRight_toRightOf="@id/iv_card_bg"
        app:layout_constraintTop_toTopOf="@id/tv_tip"
        app:layout_constraintBottom_toBottomOf="@id/tv_tip"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textColor="#8EA9E0"
        android:textSize="12sp"
        android:visibility="invisible"
        android:text="@string/homepage_one_day"/>

    <TextView
        android:id="@+id/tv_disconnect_tip"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/circle_percent_progress"
        app:layout_constraintRight_toRightOf="@id/iv_bluetooth"
        app:layout_constraintTop_toBottomOf="@id/iv_bluetooth"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="0dp"
        android:textColor="@color/color_E92C2C"
        android:text="@string/device_ble_disconnect_tip"
        android:background="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>