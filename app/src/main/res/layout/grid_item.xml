<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/example_row_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:src="@mipmap/equipment_icon_binding"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"/>

    <TextView
        android:id="@+id/example_row_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/example_row_iv_image"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/example_row_tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/example_row_tv_title"
        android:layout_marginStart="6dp"
        android:textColor="#555A63"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/suggest_icon_delete"/>

</RelativeLayout>